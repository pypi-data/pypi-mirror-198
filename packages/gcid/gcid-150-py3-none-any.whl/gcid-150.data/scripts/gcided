"medicine care, poison genocide"


import os
import sys


from gcid.command import scan
from gcid.console import wrap
from gcid.modules import cmd, irc, log, mdl, rss, tdo
from gcid.storage import Storage
from gcid.utility import wait


Storage.workdir = "/var/lib/gcid/"


scan(cmd)
scan(log)
scan(mdl)
scan(rss)
scan(tdo)


def main():
    irc.init()
    mdl.init()
    rss.init()
    wait()


wrap(main)
