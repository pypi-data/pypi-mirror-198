{
   "scheduler": "TORQUE",
   "sbmtcmd": [ "qsub", "-V" ],
   "statcmd": [ "qstat", "-x" ],
   "sbmtregex": "([0-9]+)\\.[^.]+",
   "statregex": ".*<job_state>([^<]+)</job_state>.*",

   "jobname": "#PBS -N '%jobname'",

   "logfiles": [
      "#PBS -o '%logdir/%J.out'",
      "#PBS -e '%logdir/%J.out'"
   ],

   "serial": [
      "#PBS -q '%queue'",
      "#PBS -l 'nodes=1:ppn=1'"
   ],

   "serialat": [
      "#PBS -q '%queue'",
      "#PBS -l 'nodes=%hosts:ppn=1'"
   ],

   "singlehost": [
      "#PBS -q '%queue'",
      "#PBS -l 'nodes=1:ppn=%nproc'"
   ],

   "singlehostat": [
      "#PBS -q '%queue'",
      "#PBS -l 'nodes=%hosts:ppn=%nproc'"
   ],

   "multihost": [
      "#PBS -q '%queue'",
      "#PBS -l 'nodes=%nhost:ppn=%nproc'"
   ],

   "multihostat": [
      "#PBS -q '%queue'",
      "#PBS -l 'nodes=%hosts:ppn=%nproc'"
   ],

   "envars": {
      "jobid": "$PBS_JOBID",
      "nproc": "$(expr $PBS_NUM_NODES \\* $PBS_NUM_PPN)",
      "hosts": "$(printf '%s\\n' $PBS_NODEFILE | uniq)"
   },
    
   "mpilauncher": {
      "openmpi": "mpirun -np %nproc",
      "intelmpi": "mpirun -np %nproc",
      "mpich": "mpirun -np %nproc"
   },
    
   "queued_states": [
      "Q",
      "R",
      "H",
      "S",
      "W",
      "T",
      "E"
   ],
    
   "ready_states": [
      "C"
   ],

   "warn_errors": [
      "qstat: Unknown Job Id Error [0-9]+\\.[^.]+"
   ]

}
