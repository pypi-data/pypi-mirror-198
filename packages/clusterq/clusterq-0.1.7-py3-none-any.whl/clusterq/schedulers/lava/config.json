{
   "scheduler": "Open Lava",
   "sbmtcmd": [ "bsub" ],
   "statcmd": [ "bjobs", "-ostat", "-noheader" ],
   "sbmtregex": ".*<([0-9]+)>.*",
   "statregex": "(.+)",

   "jobname": "#BSUB -J '%name'",
   "jobtype": "#BSUB -P '%type'",

   "logfiles": [
      "#BSUB -o '%logdir/%J.out'",
      "#BSUB -e '%logdir/%J.out'"
   ],

   "serial": [
      "#BSUB -q '%queue'",
      "#BSUB -n '1'"
   ],

   "serialat": [
      "#BSUB -q '%queue'",
      "#BSUB -m '%hosts'",
      "#BSUB -n '1'"
   ],

   "singlehost": [
      "#BSUB -q '%queue'",
      "#BSUB -n '%nproc'",
      "#BSUB -R 'span[hosts=1]'"
   ],

   "singlehostat": [
      "#BSUB -q '%queue'",
      "#BSUB -n '%nproc'",
      "#BSUB -m '%hosts'"
   ],

   "multihost": [
      "#BSUB -q '%queue'",
      "#BSUB -n '%nproc'",
      "#BSUB -R 'span[hosts=%nhost]'"
   ],

   "multihostat": [
      "#BSUB -q '%queue'",
      "#BSUB -n '%nproc'",
      "#BSUB -m '%hosts'"
   ],

   "envars": {
      "jobid": "$LSB_JOBID",
      "nproc": "$(echo $LSB_HOSTS | wc -w)",
      "hosts": "$(printf '%s\\n' $LSB_HOSTS | uniq)"
   },
    
   "mpilauncher": {
      "openmpi": "openmpi-mpirun",
      "intelmpi": "impi-mpirun",
      "mpich": "mpich-mpirun"
   },

   "queued_states": [
      "PEND",
      "RUN",
      "PSUSP",
      "USUSP",
      "SSUSP"
   ],

   "ready_states": [
      "DONE",
      "EXIT"
   ],

   "warn_errors": [
      "Job <[0-9]+> is not found"
   ]

}
