[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "SkillMetrics"
version = "1.2.1"
authors = [
  { name="PeterRochford", email="rochford.peter1@gmail.com" },
]
description = "A package for calculating skill of model predictions against observations"
readme = "README.md"
license = { file="LICENSE.txt" }
requires-python = ">=3.10"
dependencies = [
  'matplotlib >= 3',
  'numpy >= 1.23',
  'pandas >= 1.4',
  'xlsxwriter >= 3',
]
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: GNU General Public License v3 (GPLv3)",
    "Operating System :: OS Independent",
]
keywords = [
    "meteorology",
    "verification",
    "weather",
]

[project.urls]
"Homepage" = "http://github.com/PeterRochford/SkillMetrics"
"Bug Tracker" = "://github.com/PeterRochford/SkillMetrics/issues"
