{
    "$id": "https://raw.githubusercontent.com/osscar-org/widget-bandsplot/main/widget_bandsplot/schemas/pdos.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "JSON Schema for a PDOS entry",
    "type": "object",
    "required": ["dos"],
    "properties": {
        "fermi_energy": {"type": "number"},
        "dos": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["label", "x", "y"],
                "properties": {
                    "label": {"type": "string"},
                    "x": {
                        "type": "array",
                        "items": {"type": "number"}
                    },
                    "y": {
                        "type": "array",
                        "items": {"type": "number"}
                    },
                    "lineStyle": {"enum": ["solid", "dash"]},
                    "borderColor": {"type": "string"},
                    "backgroundColor": {"type": "string"},
                    "backgroundAlpha": {
                        "type": "string",
                        "pattern": "^[1-9][0-9]?\\%$"
                    }
                }
            }
        }
    }
}
